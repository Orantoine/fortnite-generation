pipeline {
    agent any
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    environment {
        registry = "orantoine/fortnite-generation"
        registryCredential = 'dockerhub'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Post'){
            steps{
                script {
                        docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
    }
}